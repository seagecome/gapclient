<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- ===================================================================== -->
	<!-- 以下是appender的定义，定义日志输出的目的地、输出方式及过滤级别 -->
	<!-- ===================================================================== -->
	<appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] [%-3p] %c{1}: %m%n" />
		</layout>
	</appender>
	
	<appender name="apiAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/data/logs/application/gapclient/api.log" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] [%-3p] %c{1}: %m%n" />
		</layout>
	</appender>
	
	<appender name="bizAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/data/logs/application/gapclient/biz.log" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] [%-3p] %c{1}: %m%n" />
		</layout>
	</appender>

	<appender name="webAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/data/logs/application/gapclient/web.log" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] [%-3p] %c{1}: %m%n" />
		</layout>
	</appender>

	<appender name="defaultAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/data/logs/application/gapclient/default.log" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] [%-3p] %c{1}: %m%n" />
		</layout>
	</appender>

	<appender name="scheduleAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="/data/logs/application/gapclient/schedule-default.log" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] [%-3p] %c{1}: %m%n" />
		</layout>
	</appender>

	<!-- ===================================================================== -->
	<!-- 日志写出器：每一个logger可以有多个输出目的地和输出方式 -->
	<!-- ===================================================================== -->
	<logger name="com.ethan.gapclient.api" additivity="false">
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="apiAppender" />
	</logger>
	
	<logger name="com.ethan.gapclient.biz" additivity="false">
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="bizAppender" />
	</logger>

	<logger name="com.ethan.gapclient.web" additivity="false">
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="webAppender" />
	</logger>
	
	<logger name="com.ethan.gapclient.web.schedule.thirdpay" additivity="false">
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="scheduleAppender" />
	</logger>
	
	<logger name="com.ethan.console" additivity="false">
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="webAppender" />
	</logger>

	<!-- ===================================================================== -->
	<!-- Root logger 所有logger的基类，没有定义的logger将会使用root logger -->
	<!-- ===================================================================== -->
	<root>
		<level value="INFO" />
		<appender-ref ref="consoleAppender" />
		<appender-ref ref="defaultAppender" />
	</root>

</log4j:configuration>